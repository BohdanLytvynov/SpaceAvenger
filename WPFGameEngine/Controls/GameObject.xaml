<UserControl x:Class="WPFGameEngine.Controls.GameObject"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGameEngine.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <DockPanel Width="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ActualWidth,
        UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
          Height="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ActualHeight,
        UpdateSourceTrigger=PropertyChanged, Mode=OneWay}">
        <Grid DockPanel.Dock="Top" Height="10">
        </Grid>
        <Canvas x:Name="main" DockPanel.Dock="Bottom">
        </Canvas>
    </DockPanel>
</UserControl>
