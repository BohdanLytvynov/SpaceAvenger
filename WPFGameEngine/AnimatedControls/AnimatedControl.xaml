<UserControl x:Class="WPFGameEngine.AnimatedControls.AnimatedControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGameEngine.AnimatedControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="Transparent" Width="{Binding ElementName=img, Path=Width, UpdateSourceTrigger=PropertyChanged}"
          Height="{Binding ElementName=img, Path=Height, UpdateSourceTrigger=PropertyChanged}">
        <Image x:Name="img" Stretch="UniformToFill"/>
    </Grid>
</UserControl>
