<Window x:Class="SpaceAvenger.Views.DialogWindow.EscDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceAvenger.Views.DialogWindow"
        mc:Ignorable="d"
        Title="EscDialog" Height="200" Width="200"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent">
    <Grid>
        <Border Style="{StaticResource BorderStype}" CornerRadius="10"
                BorderThickness="4">
            <StackPanel Orientation="Vertical" Margin="8">
                <Button Content="Продовжити Гру" Margin="0,40"
                        x:Name="Continue"
                        FontSize="12"
                        Style="{StaticResource Button}" Click="Continue_Click"/>
                <Button Content="Вийти з Гри" Style="{StaticResource Button}"
                        x:Name="Exit" Click="Exit_Click"
                        FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
