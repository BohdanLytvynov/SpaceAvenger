<Page x:Class="SpaceAvenger.Views.Pages.Main_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceAvenger.Views.Pages"
      xmlns:vm="clr-namespace:SpaceAvenger.ViewModels.PagesVM"      
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_Page"
      d:DataContext="{d:DesignInstance vm:Main_ViewModel, IsDesignTimeCreatable=True}"
      >

    <Page.Background>
        <ImageBrush 
    ImageSource="{StaticResource MainPageBack}"
        Stretch="UniformToFill"/>
    </Page.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="380"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="450"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="1" 
            BorderThickness="7" CornerRadius="30"
            Margin="25" Style="{StaticResource BorderStype}">
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="296"/>
                        <ColumnDefinition Width="10"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="1" Grid.Column="1"
                Content="Нова Гра" Style="{StaticResource Button}"
                        Foreground="White" FontSize="16"
                        Command="{Binding OnSurvivalModeButtonPressed}"/>
                    <!--<Button Grid.Row="3" Grid.Column="1"
                Content="Continue" Style="{StaticResource Button}"
                    Foreground="White" FontSize="16"
                    />-->

                    <!--<Button Grid.Row="5" Grid.Column="1" Style="{StaticResource Button}"
                            Content="Surviaval Mode" FontSize="16"
                            Command="{Binding OnSurvivalModeButtonPressed}"/>-->


                    <!--<Button Grid.Row="7" Grid.Column="1"
                    Content="Load Game" Style="{StaticResource Button}"
                    Foreground="White" FontSize="16"
                    />-->
                    <Button Grid.Row="3" Grid.Column="1"
                        Content="Автор" Style="{StaticResource Button}"
                        Foreground="White" FontSize="16" Click="Button_Click"
/>
                    <Button Grid.Row="5" Grid.Column="1"
                Content="Вихід" 
                       Foreground="White" FontSize="16" Style="{StaticResource Button}"
                            Command="{StaticResource ExitCommand}">
                    </Button>

                </Grid>

            </Border>

        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="Space Avenger V 1.0"
                   TextAlignment="Center"
                   FontSize="70"                       
                   >
                <TextBlock.Effect>
                    <DropShadowEffect BlurRadius="0" Color="#FF5466BE" RenderingBias="Quality" ShadowDepth="4"/>
                </TextBlock.Effect>

                <TextBlock.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF3A3409" Offset="1"/>
                        <GradientStop Color="#FFE9FF00" Offset="0"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
            </TextBlock>
        </Grid>
    </Grid>
</Page>
