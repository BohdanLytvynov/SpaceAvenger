<Page x:Class="SpaceAvenger.Views.Pages.LevelStatistics_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceAvenger.Views.Pages"
      mc:Ignorable="d"
      xmlns:vm="clr-namespace:SpaceAvenger.ViewModels.PagesVM"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LevelStatistics_Page"
      d:DataContext="{d:DesignInstance vm:LevelStatistics_ViewModel, IsDesignTimeCreatable=True}">
    <Page.Background>
        <ImageBrush ImageSource="{StaticResource ChooseProfileBack}"/>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="10"/>
            <RowDefinition/>
            <RowDefinition Height="55"/>
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource textBlockHeaders}"
                   FontSize="30" TextAlignment="Center"
                   Text="{Binding Header, UpdateSourceTrigger=PropertyChanged}"/>
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="20">
            <TextBlock Margin="0,0,0,20"
                Text="{Binding EnemyCount, UpdateSourceTrigger=PropertyChanged,
                StringFormat='Всього ворогів: {0}'}" Style="{StaticResource textBlockHeaders}"/>
            <TextBlock Margin="0,0,0,20"
                       Style="{StaticResource textBlockHeaders}"
                       Text="{Binding ShipsDestroyed, UpdateSourceTrigger=PropertyChanged,
                StringFormat='Кількість знищених ворогів: {0}'}"/>
            <TextBlock TextWrapping="Wrap" Height="100" Margin="0,30,0,0"
                       Style="{StaticResource textBlockHeaders}"
                       Text="{Binding Msg, UpdateSourceTrigger=PropertyChanged,
                        Mode=OneWay}"
                       />
        </StackPanel>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource Button}" Content="Головне меню"
                    Grid.Column="1"
                    Command="{Binding OnBackToMenu}"
                    Margin="5"/>
        </Grid>
    </Grid>
</Page>
