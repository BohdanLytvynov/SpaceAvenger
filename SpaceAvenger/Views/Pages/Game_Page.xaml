<Page x:Class="SpaceAvenger.Views.Pages.Game_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceAvenger.Views.Pages"
      xmlns:animControls="clr-namespace:WPFGameEngine.AnimatedControls;assembly=WPFGameEngine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game_Page"
      xmlns:vm="clr-namespace:SpaceAvenger.ViewModels.PagesVM"
      x:Name="Root"
      d:DataContext="{d:DesignInstance vm:GamePage_ViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="{StaticResource Back1_GamePage}" 
                            Stretch="UniformToFill" 
                            TileMode="FlipX"
                        Viewport="{Binding BackViewport, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid.Background>
        <Label Width="{Binding RelativeSource={RelativeSource 
            Mode=FindAncestor, AncestorType=Page}, Path=ActualWidth, 
            UpdateSourceTrigger=PropertyChanged}"
               Height="{Binding RelativeSource={RelativeSource 
            Mode=FindAncestor, AncestorType=Page}, Path=ActualHeight, 
            UpdateSourceTrigger=PropertyChanged}"
               Content="{Binding GameView, UpdateSourceTrigger=PropertyChanged}">
        </Label>
    </Grid>
</Page>
