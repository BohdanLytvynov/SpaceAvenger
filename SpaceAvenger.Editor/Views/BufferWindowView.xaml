<Window x:Class="SpaceAvenger.Editor.Views.BufferWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceAvenger.Editor.Views"
        mc:Ignorable="d"
        Height="450" Width="800"
        xmlns:vm="clr-namespace:SpaceAvenger.Editor.ViewModels"
        d:DataContext="{d:DesignInstance vm:BufferWindowViewModel, IsDesignTimeCreatable=True}"
        Title="{Binding Title}"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <TabControl>
            <TabItem Header="Game Objects Buffer">
                <TreeView BorderBrush="Black" BorderThickness="2" Margin="10"
          ItemsSource="{Binding GameObjectBuffer, UpdateSourceTrigger=PropertyChanged}"
          />
            </TabItem>

            <TabItem Header="Components Buffer">
                <ListView BorderBrush="Black" BorderThickness="2" Margin="10"
ItemsSource="{Binding ComponentBuffer, UpdateSourceTrigger=PropertyChanged}"
SelectedIndex="{Binding SelectedComponentIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
            </TabItem>
        </TabControl>
        
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Button Content="Select" Grid.Column="1"/>
            <Button Content="Remove" Grid.Column="3"/>
            <Button Content="Clear" Grid.Column="5" Command="{Binding OnClearButtonPressed}"/>
            <Button Content="Cancel" Grid.Column="7" Command="{Binding OnCancelButtonPressed}"/>
        </Grid>
    </Grid>
</Window>
