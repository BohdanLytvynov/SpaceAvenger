<Window x:Class="SpaceAvenger.Editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceAvenger.Editor"
        xmlns:gameView ="clr-namespace:WPFGameEngine.GameViewControl;assembly=WPFGameEngine"
        xmlns:vm="clr-namespace:SpaceAvenger.Editor.ViewModels"
        xmlns:controls="clr-namespace:WPFGameEngine.Editor.Controls;assembly=WPFGameEngine"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Height="450" Width="800" WindowState="Maximized" x:Name="Root"
        Title="{Binding Title}"
        d:DataContext="{d:DesignInstance vm:EditorMainWindowViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <TabControl>
            <TabItem Header="Game Objects">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="170*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="319*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="303*"/>
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch" 
                                  HorizontalAlignment="Stretch" 
                                  Background="Black"/>
                    <Border Style="{StaticResource BorderRoundStyle}" Grid.Column="2" Margin="5">
                        <Label  x:Name="GameView" Margin="5"
                           Content="{Binding GameView, UpdateSourceTrigger=PropertyChanged}">
                            <Label.Background>
                                <SolidColorBrush Color="{Binding ElementName=picker, Path=SelectedColor, 
                                UpdateSourceTrigger=PropertyChanged}"/>
                            </Label.Background>
                        </Label>
                    </Border>
                    <GridSplitter Grid.Column="3" Width="5" VerticalAlignment="Stretch" 
                                  HorizontalAlignment="Stretch" 
                                  Background="Black"/>
                    <ScrollViewer>
                        <StackPanel Orientation="Vertical" Height="1000">
                            <Rectangle Style="{StaticResource BorderRectStyle}"/>
                            <TextBlock Text="Hierarchy" Style="{StaticResource DescLabel}"/>
                            <Rectangle Style="{StaticResource BorderRectStyle}"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="Add" Margin="10,0,10,0" Command="{Binding OnAddGameObjectButtonPressed}"/>
                                <Button Content="Remove" Command="{Binding OnDeleteGameObjectButtonPressed}"/>
                                <Button Content="Copy" Margin="10,0,10,0" Command="{Binding OnCopyGameObjectButtonPressed}"/>
                                <Button Content="Open Buffer" Command="{Binding OnOpenBufferButtonPressed}"/>
                            </StackPanel>
                            <TreeView Grid.Column="1" Margin="5,10" ItemsSource="{Binding Items, 
                                UpdateSourceTrigger=PropertyChanged}"
                                      Height="250"/>
                            <StackPanel Orientation="Horizontal" Margin="10,3">
                                <TextBox MinWidth="200" Style="{StaticResource TxtBoxInputStyle}" FontSize="14">
                                    <TextBox.Text>
                                        <Binding Path="PathToExport" UpdateSourceTrigger="PropertyChanged" Mode="TwoWay">
                                            <Binding.ValidationRules>
                                                <DataErrorValidationRule/>
                                            </Binding.ValidationRules>
                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                                <Button Content="..." MinWidth="20" Command="{Binding OnOpenDialogButtonPressed}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="10,3">
                                <Button Content="Export Selected" Command="{Binding OnExportButtonPressed}"/>
                            </StackPanel>

                            <Rectangle Style="{StaticResource BorderRectStyle}"/>
                            <TextBlock Text="Prefabs" Style="{StaticResource DescLabel}"/>
                            <Rectangle Style="{StaticResource BorderRectStyle}"/>

                            <StackPanel Orientation="Horizontal" Margin="10,5">
                                <Button Content="Refresh" 
            Margin="0,0,5,0"
            Command="{Binding OnRefreshPrefabsButtonPressed}"/>
                                <Button Content="Load" 
            Command="{Binding OnLoadPrefabButtonPressed}" 
            Margin="0,0,5,0"/>
                                <Button Content="Remove"
            Command="{Binding OnRemovePrefabButtonPressed}"/>
                            </StackPanel>

                            <ListView Height="250" Margin="5,5"
                                      ItemsSource="{Binding Prefabs, 
                                UpdateSourceTrigger=PropertyChanged}"
                                      SelectedItem="{Binding SelectedPrefab,
                                UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        </StackPanel>
                    </ScrollViewer>
                    <Grid Grid.Column="4">
                        <ScrollViewer VerticalScrollBarVisibility="Visible">
                            <StackPanel Orientation="Vertical" Height="2000">
                                <Rectangle Style="{StaticResource BorderRectStyle}"/>
                                <TextBlock Text="Global Properties:" Style="{StaticResource DescLabel}"/>
                                <Rectangle Style="{StaticResource BorderRectStyle}"/>

                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Show Gizmo" Margin="10" IsChecked="{Binding ShowGizmos, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <CheckBox Content="Show Borders" Margin="10" IsChecked="{Binding ShowBorders, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <CheckBox Content="Show Colliders" Margin="10" IsChecked="{Binding ShowColliders, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <StackPanel Margin="10" Orientation="Horizontal">
                                        <TextBlock Text="Background: "/>
                                        <xctk:ColorPicker x:Name="picker"/>
                                    </StackPanel>
                                </StackPanel>

                                <Rectangle Style="{StaticResource BorderRectStyle}"/>
                                <TextBlock Text="GameObject Properties:" Style="{StaticResource DescLabel}"/>
                                <Rectangle Style="{StaticResource BorderRectStyle}"/>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox Content="Enabled" Margin="10" 
                                          IsChecked="{Binding Enabled, 
                                    UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                                    <TextBlock Text="{Binding ObjName, UpdateSourceTrigger=PropertyChanged, StringFormat='Object name:{0}'}"
                                           Style="{StaticResource FieldName}"
                                           Margin="15,0,0,0"/>
                                    <TextBlock Text="{Binding UniqueName, UpdateSourceTrigger=PropertyChanged, StringFormat='Unique name:{0}'}"
                                            Style="{StaticResource FieldName}"
                                            Margin="15,0,0,0"/>
                                </StackPanel>
                                <controls:Slider Value="{Binding ZIndex, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                Margin="10" LabelText="ZIndex: "
                                Minimum="0" Maximum="100"
                                SliderStyle="{StaticResource IntSlider_Tick1}"
                 />
                                <Rectangle Style="{StaticResource BorderRectStyle}"/>
                                <TextBlock Text="GameObject Components:" Style="{StaticResource DescLabel}"/>
                                <Rectangle Style="{StaticResource BorderRectStyle}"/>

                                <ListView x:Name="ComponentPresenter" ItemsSource="{Binding Components, 
                                UpdateSourceTrigger=PropertyChanged}"  VirtualizingPanel.IsVirtualizing="False" 
                                      VirtualizingPanel.VirtualizationMode="Standard"
                                          SelectedIndex="{Binding SelectedComponentIndex, UpdateSourceTrigger=PropertyChanged,
                                    Mode=TwoWay}"
                                          />
                                <StackPanel Orientation="Vertical" Margin="5">
                                    <ComboBox Style="{StaticResource ConboboxStyle}" MinWidth="100"
              ItemsSource="{Binding ComponentsToAdd, UpdateSourceTrigger=PropertyChanged}"
              SelectedItem="{Binding SelectedComponent, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
              DisplayMemberPath="DisplayName"
              />
                                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                        <Button Content="Add Component" Width="100" 
                Command="{Binding OnAddComponentButtonPressed}"
                Margin="0,0,10,0"/>
                                        <Button Content="Remove Component " Width="120" 
                Command="{Binding OnDeleteComponentButtonPressed}"/>
                                        <Button Content="Add To Buffer" Margin="10,0,0,0"
                                                Command="{Binding OnCopyComponentButtonPressed}"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Level">

            </TabItem>
        </TabControl>
    </Grid>
</Window>
